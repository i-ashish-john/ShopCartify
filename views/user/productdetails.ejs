<script>
    $(document).ready(function () {
        // Initialize ElevateZoom
        $('#mainImage').elevateZoom({
            gallery: 'subImagesContainer', // Change this to the ID of your sub-images container
            cursor: 'pointer',
            galleryActiveClass: 'active',
            imageCrossfade: true,
            loadingIcon: 'https://cdn.rawgit.com/elevateweb/elevatezoom/master/src/loading.gif'
        });

        // Add event listener for sub-image click
        $('.subImage').click(function () {
            // Set the clicked sub-image as the main image
            $('#mainImage').attr('src', $(this).attr('src'));

            // Re-initialize ElevateZoom for the new main image
            $('#mainImage').elevateZoom({
                zoomType: "inner",
                cursor: "crosshair",
                zoomWindowFadeIn: 500,
                zoomWindowFadeOut: 750
            });
        });
    });
 
</script>

  
  <script>
      document.addEventListener("DOMContentLoaded", function () {
          const mainImage = document.getElementById("mainImage");
          const subImages = document.querySelectorAll(".subImage");
  
          subImages.forEach(subImage => {
              subImage.addEventListener("click", function () {
                  mainImage.src = subImage.src;
              });
          });
      });
  </script>

<script>
  function addToCart(productId) {
      $.get(`/addToCart?id=${productId}`)
          .done(function(response) {
            console.log('suceeeed',response);
              if (response=='success') {
                  $('#addToCartModal').modal('show');
              } else {
                  console.log("else")
                  $('#limitExceededModal').modal('show');
                  $('#limitExceededModal .modal-body').text(response.message);
              }
          })
          .fail(function(jqXHR, textStatus, errorThrown) {
              $('#serverErrorModal').modal('show');
          });
  }
  
       </script>


<script>
