   <div class="container ">
       <div class="order-heading val">Order Details</div>
       <div class="table-responsive">
           <table class="table table-bordered table-hover">
               <thead class="thead-dark">
                  <tr>
                      <th scope="col"></th>
                      <th scope="col">Order ID</th>
                      <th scope="col">Product Image</th>
                      <th scope="col">Product Name</th>
                      <th scope="col">Total Price</th>
                      <th scope="col">Order details</th>
                  </tr>
               </thead>
               <tbody>
                  <% if (orders) { %>
                      <% orders.sort((a, b) => new Date(b.orderDate) - new Date(a.orderDate)).reverse().forEach((order, index) => { %>
                          <tr>
                              <td data-label="#"> <%= index + 1 %> </td>
                              <td data-label="Order ID"><%= order.orderId %> </td>
                              <td data-label="Product Image">
                                 <% order.productdetails.forEach(product => { %>
                                     <img src="<%= product.Images[0]?.slice(6) %>" alt="<%= product.name %>" width="50" height="50">
                                 <% }); %>
                              </td>
                              <td data-label="Product Name">
                                 <% order.productdetails.forEach(product => { %>
                                     <%= product.name %><br>
                                 <% }); %>
                              </td>
                              <td data-label="Total Price"> <%= order.totalPrice %>/- </td>
                              <td>
                                 <form action="/SingleOrderlist/<%= order._id%>" method="post">
                                     <button type="submit" class="btn btn-secondary;" style="background-color: #f4dc51;border-radius: 5px;">
                                         <span data-label="Order Status" style="color: #000000;">info</span>
                                     </button>
                                 </form>
                              </td>
                          </tr>
                      <% }); %>
                  <% } %>
               </tbody>
           </table>
           <div class="container mt-3">
