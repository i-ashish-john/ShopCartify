                        <!-- Your form content here -->

                        <!-- Example Personal Details -->
                        <div class="form-group">
                            <label for="fullName">Full Name</label>
                            <input type="text" class="form-control" id="fullName" placeholder="Enter full name" readonly value="<%= user.name %>">
                        </div>

                        <div class="form-group">
                            <label for="eMail">Email</label>
                            <input type="email" class="form-control" id="eMail" placeholder="Enter email ID" readonly value="<%= user.email %>">
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="sTate">State</label>
                                <input type="text" class="form-control" id="sTate" placeholder="Enter State" name="state"   value="<%= (user.address && user.address[0]) ? user.address[0].state : '' %>" readonly>
                            </div>
                        </div>


                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="ciTy">City</label>
                                <input type="name" class="form-control" id="ciTy" placeholder="Enter City" name="city" value="<%= (user.address && user.address[0]) ? user.address[0].city : '' %>" readonly>
                            </div>
                        <!-- Example Address -->
                        <div class="form-group">
